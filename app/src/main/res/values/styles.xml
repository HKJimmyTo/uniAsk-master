<resources>

   <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <!-- Customize your theme here. -->
      <item name="colorPrimary">@color/chat_sdk_theme_color</item>
      <item name="colorPrimaryDark">@color/chat_sdk_theme_color_dark</item>
      <item name="colorAccent">@color/colorAccent</item>
   </style>
   <style name="AppTheme.NoActionBar">
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
   </style>
   <style name="AppTheme.AppBarOverlay"
          parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
   <style name="AppTheme.PopupOverlay"
          parent="ThemeOverlay.AppCompat.Light"/>

   <style name="ContactLabelTextView">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_gravity">right|center_vertical</item>
   </style>

   <style name="ContactTextView">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_gravity">fill_horizontal</item>
      <item name="android:textSize">16sp</item>
      <item name="android:background">@drawable/textview_border</item>
   </style>

       <style name="LoginButtonsStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
	
</resources>
